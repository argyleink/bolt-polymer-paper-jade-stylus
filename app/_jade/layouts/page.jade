doctype html
html(manifest = dev ? '' : 'manifest.appcache')
  include ../includes/head
    
  block title
    title Bolt & Paper

  block description
    meta(name='description', content='Default page description')

  block css
    //- master.styl combines all our modules into this file
    link(rel='stylesheet', href='styles/app.css')

  script(src='js/bower/webcomponentsjs/webcomponents-lite.js')

  //- Polymer Imports
  block polymer
    include ../includes/components

  body.fullbleed.layout.vertical
    block content
      h1 Default Test Title

    block scripts
      include ../includes/scripts
    